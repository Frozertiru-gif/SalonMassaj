# Docker Compose runtime environment for api/migrate/seed
# Copy to .env for containerized run.
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/salon
JWT_SECRET=dev-secret
JWT_EXPIRES_MINUTES=60

# Telegram configuration
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=
TELEGRAM_BOT_USERNAME=
TELEGRAM_ADMIN_IDS=
TELEGRAM_SYS_ADMIN_IDS=
TELEGRAM_MODE=polling
LOG_LEVEL=INFO

# Admin bootstrap (optional)
ADMIN_EMAIL=
ADMIN_PASSWORD=
SEED_ADMIN=false

# API access tokens (optional)
# Empty value means an empty token list.
# Supported formats: CSV (`token1,token2`) and JSON array (`["token1","token2"]`).
SYS_ADMIN_TOKENS=
ADMIN_TOKENS=

# Backups
# Backup script requires bash inside API container (set -euo pipefail).
BACKUP_ENABLED=true
BACKUP_CHAT_ID=
BACKUP_PASSPHRASE=
RETENTION_KEEP=7
