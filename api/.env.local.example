# Local API run (outside Docker)
# Copy to api/.env for uvicorn/alembic/python scripts.
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/salon
JWT_SECRET=change-me
JWT_EXPIRES_MINUTES=60

# Telegram configuration
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=
TELEGRAM_BOT_USERNAME=
TELEGRAM_ADMIN_IDS=
TELEGRAM_SYS_ADMIN_IDS=
TELEGRAM_MODE=webhook
LOG_LEVEL=INFO

# Backups
# Disabled by default (safe when BACKUP_CHAT_ID is empty)
BACKUP_ENABLED=false
BACKUP_CHAT_ID=
# Enabled example:
# BACKUP_ENABLED=true
# BACKUP_CHAT_ID=-1001234567890
BACKUP_DIR=/app/backups
BACKUP_PASSPHRASE=
RETENTION_KEEP=7
BACKUP_SCRIPT_PATH=/app/scripts/backup_db.sh
BACKUP_ENV_PATH=/app/scripts/backup.env
BACKUP_CRON_HOUR=3
BACKUP_CRON_MINUTE=15
